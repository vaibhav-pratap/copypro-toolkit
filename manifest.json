{
  "manifest_version": 3,
  "name": "CopyPro Toolkit",
  "version": "1.11.6",
  "description": "Advanced copy utilities with modern UI, reliable clipboard handling, TinyMCE-compatible text copying, and image name/alt text copying using Font Awesome CDN.",
  "author": "Vaibhav Singh",
  "homepage_url": "https://exiverlabs.co.in",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "storage",
    "commands"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js", "js/toast.js"],
      "css": ["css/toast.css"]
    }
  ],
  "commands": {
    "copy-clean-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Copy clean highlighted text"
    },
    "copy-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Copy current page URL"
    },
    "copy-slug": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Copy slug from focused link or page"
    },
    "copy-image-name": {
      "suggested_key": {
        "default": "Ctrl+Shift+I"
      },
      "description": "Copy image name from URL or background image"
    },
    "copy-alt-text": {
      "description": "Copy alt text from image"
    }
  }
}